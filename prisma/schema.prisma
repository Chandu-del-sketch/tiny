generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:/tmp/dev.db"
}

model Link {
  id          Int       @id @default(autoincrement())
  shortcode   String    @unique
  url         String
  totalClicks Int       @default(0)
  lastClicked DateTime?
  createdAt   DateTime  @default(now())
}
